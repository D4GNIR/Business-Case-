{% extends 'base-admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Index des produits</h1>

    <table class="table table-hover text-light table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Decription</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in pagination %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.label }}</td>
                <td>{{ product.decription }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.isActive ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_admin_product_show', {'id': product.id}) }}" class="btn btn-success">Voir</a>
                    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-warning mt-3">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrements trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_new') }}" class="btn btn-light">Créer un nouveau produit</a>

    <div>
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
