{% extends 'base-admin.html.twig' %}

{% block title %}{{ command.numCommand }}{% endblock %}

{% block body %}
<div class='container'>
    <h1 class="mt-3">{{ command.numCommand }}</h1>
    <div class="row mt-3">
    <ul>
      <li class="mt-2">Client :{{ command.user.firstName }} {{ command.user.lastName }}</li>
      <li class="mt-2">Date de création : {{ command.createdAt|date("d/m/Y")  }}</li>
      <li class="mt-2">Status : {{ command.status }}</li>
      <li class="mt-2">Total Vente : {{ command.totalPrice|transorm_centime }} €</li>
      <li class="mt-2">Nombres articles : {{ command.products|length }}</li>
    </ul>
    </div>
</div>
{% endblock %}